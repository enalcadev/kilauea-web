---
export interface Props {
    image?: string;
    title?: string;
    description?: string;
}

const { 
    image: imgProp,
    title: titleProp, 
    description: descProp 
}: Props = Astro.props;
const altText = titleProp || 'Card image';
---
<div class="bg-white rounded-3xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
    {imgProp ? (
        <img src={imgProp} alt={altText} class="w-full h-100 object-cover hover:scale-105 transition-transform duration-300" />
    ) : (
        <div class="w-full h-48 bg-gray-100 flex items-center justify-center text-gray-400">
            {altText}
        </div>
    )}
    <div class="p-4">
        <h3 class="text-xl font-semibold mb-2">{titleProp}</h3>
        <p class="text-gray-600">{descProp}</p>
    </div>
</div>